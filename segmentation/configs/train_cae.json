{
    "net_dir_name": "unet_riga_exp",
    "architecture": "unet",
    "device_type": "cuda:0",
    "n_channels": 3,
    "n_classes": 3,
    "epochs_total": 100,
    "checkpoint_step": 20,
    "validation_step": 5,
    "nets_number": 10,

    "learn_from_scratch": false,
    "learn_from_model": "nets/unet_riga",
    "pretrained_epochs": 100,
    "use_previous_lr": false,

    "net_dir_path": "nets",
    "loss_func": "CrossEntropyLoss",

    "dataset": {
        "type": "RIGA",
        "data_path": "datasets/RIGA_crop/DiscRegion",
        "gt_mode": "mOH",
        "params": {
            "sets": ["Magrabia", "MESSIDOR"]
        }
    },

    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 1e-04,
            "weight_decay": 1e-04
        }
    },
    "batch_size": 4,
    "train_part": 0.75,

    "lr_scheduler": {
        "type": "StepLR",
        "parameters": {
            "gamma": 0.9,
            "step_size": 10
        }
    }
}